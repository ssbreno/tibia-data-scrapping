generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Respawn {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String?
  character  String?  @unique
  is_pt      Boolean  @default(false)
  pt_members String[] @default([])

  @@index([name])
  @@index([character])
}

model CharacterList {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  vocation   String
  level      Int
  type       CharacterType

  @@index([name])
}

enum CharacterType {
  MAKER
  BOMBA
  MAIN
}
